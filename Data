#include <iostream>
#include <string>
#include <regex>

int main() {
    std::string date;
    std::cout << "Введите дату: ";
    std::getline(std::cin, date);

  
    std::regex pattern(R"(^(\d{1,2}[./-]\d{1,2}[./-]\d{4}|[A-Za-z]+\s\d{1,2},\s\d{4}|\d{4}[./-]\d{1,2}[./-]\d{1,2}|\d{1,2}\s[а-яА-Яa-zA-Z]+\s\d{4})$)");

    if (std::regex_match(date, pattern))
        std::cout << "Корректная дата!" << std::endl;
    else
        std::cout << "Некорректная дата." << std::endl;

    return 0;
}
