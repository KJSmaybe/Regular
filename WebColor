#include <iostream>
#include <string>
#include <regex>

bool check_rgb(const std::string& color) {
    std::regex rgb_int(R"(^rgb\(\s*(25[0-5]|2[0-4]\d|1?\d{1,2})\s*,\s*(25[0-5]|2[0-4]\d|1?\d{1,2})\s*,\s*(25[0-5]|2[0-4]\d|1?\d{1,2})\s*\)$)");
    std::regex rgb_pct(R"(^rgb\(\s*(100|[1-9]?\d)%\s*,\s*(100|[1-9]?\d)%\s*,\s*(100|[1-9]?\d)%\s*\)$)");
    return std::regex_match(color, rgb_int) || std::regex_match(color, rgb_pct);
}

bool check_hex(const std::string& color) {
    std::regex hex(R"(^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$)");
    return std::regex_match(color, hex);
}

bool check_hsl(const std::string& color) {
    std::regex hsl(R"(^hsl\(\s*(360|3[0-5]\d|[12]?\d{1,2}|[0-9]{1,2})\s*,\s*(100|[1-9]?\d)%\s*,\s*(100|[1-9]?\d)%\s*\)$)");
    return std::regex_match(color, hsl);
}

int main() {
    std::string color;
    std::cout << "Введите web-цвет: ";
    std::getline(std::cin, color);

    if (check_rgb(color) || check_hex(color) || check_hsl(color))
        std::cout << "Корректный web-цвет!" << std::endl;
    else
        std::cout << "Некорректный web-цвет." << std::endl;

    return 0;
}
