#include <iostream>
#include <string>
#include <regex>

int main() {
    std::string color;
    std::cout << "Введите web-цвет: ";
    std::getline(std::cin, color);

    // Регулярка для HEX (короткий + длинный), rgb и hsl (проценты и целые), пробелы допускаются
    std::regex pattern(R"(^(#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})|rgb\(\s*((([0-9]{1,2}|1[0-9]{2}|2[0-4][0-9]|25[0-5])|(100|[1-9]?[0-9])%)\s*,\s*){2}(([0-9]{1,2}|1[0-9]{2}|2[0-4][0-9]|25[0-5])|(100|[1-9]?[0-9])%)\s*\)|hsl\(\s*(360|3[0-5][0-9]|[1-2]?[0-9]{1,2}|[0-9]{1,2})\s*,\s*(100|[1-9]?[0-9])%\s*,\s*(100|[1-9]?[0-9])%\s*\))$)");

    if (std::regex_match(color, pattern))
        std::cout << "Корректный web-цвет!" << std::endl;
    else
        std::cout << "Некорректный web-цвет." << std::endl;

    return 0;
}

